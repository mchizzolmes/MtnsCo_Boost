Custom CSS Section - Survives Theme Updates
Add your custom styles here instead of editing theme files
{% endcomment %}

<style>
{{ section.settings.custom_css }}

/* Product Detail Styles - Safe from theme updates */
.product-detail {
  padding: 4rem 0;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
}

.product-detail__container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 2rem;
}

.product-detail__header {
  text-align: center;
  margin-bottom: 3rem;
}

.product-detail__title {
  font-size: 2.5rem;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 1rem;
}

.product-detail__divider {
  width: 60px;
  height: 3px;
  background: linear-gradient(90deg, #3498db, #2ecc71);
  margin: 0 auto;
}

/* Dynamic Grid System */
.product-detail__grid {
  display: grid;
  gap: 2rem;
  align-items: start;
}

/* Responsive grid based on image count */
.product-detail__grid[data-images="1"] {
  grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
}

.product-detail__grid[data-images="2"] {
  grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
}

.product-detail__grid[data-images="3"],
.product-detail__grid[data-images="4"] {
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
}

.product-detail__grid[data-images="5"],
.product-detail__grid[data-images="6"] {
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
}

/* Content Blocks */
.content-block {
  break-inside: avoid;
  border-radius: 12px;
  overflow: hidden;
  transition: transform 0.3s ease;
}

.content-block:hover {
  transform: translateY(-2px);
}

.content-block--text {
  background: white;
  padding: 2rem;
  box-shadow: 0 4px 20px rgba(0,0,0,0.08);
}

.content-block--image {
  background: white;
  padding: 1rem;
  box-shadow: 0 4px 20px rgba(0,0,0,0.08);
}

/* Dynamic layout variations */
.product-detail[data-layout="0"] .content-block[data-position="3"],
.product-detail[data-layout="0"] .content-block[data-position="6"] {
  grid-column: span 2;
}

.product-detail[data-layout="1"] .content-block--image:nth-child(even) {
  grid-row: span 2;
}

.product-detail[data-layout="2"] .content-block:first-child {
  grid-column: span 2;
}

/* Image styling */
.image-wrapper {
  margin: 0;
  position: relative;
  overflow: hidden;
  border-radius: 8px;
}

.responsive-image {
  width: 100%;
  height: auto;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.image-wrapper:hover .responsive-image {
  transform: scale(1.05);
}

/* Text content */
.text-content {
  line-height: 1.7;
  color: #34495e;
}

.text-content p {
  margin-bottom: 1.2rem;
}

.text-content p:last-child {
  margin-bottom: 0;
}

/* Mobile responsiveness */
@media (max-width: 768px) {
  .product-detail__grid {
    grid-template-columns: 1fr !important;
    gap: 1.5rem;
  }
  
  .content-block {
    grid-column: span 1 !important;
    grid-row: span 1 !important;
  }
  
  .product-detail__title {
    font-size: 2rem;
  }
}

@media (max-width: 1024px) and (min-width: 769px) {
  .product-detail__grid[data-images="5"],
  .product-detail__grid[data-images="6"] {
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  }
}

</style>

{% schema %}
{
  "name": "Custom CSS",
  "settings": [
    {
      "type": "header",
      "content": "Custom CSS - Safe from theme updates"
    },
    {
      "type": "textarea",
      "id": "custom_css",
      "label": "Additional Custom CSS",
      "info": "Add any additional CSS here"
    }
  ]
}
{% endschema %}